<html>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
    <script type="text/javascript" src="/js/index.js"></script>
<body>
	<div class="container">
		<h5 style="text-align: center; font-weight: 700; font-size: 30px;">Edit Mongoose</h5>
		<table class="table">
		  <tbody>
		    <tr>
		    	<form method="post" action="/mongoose/edit"> 
			      <th scope="row">1</th>
			      <td>
			      	<input type="text" name="id" class="form-control" value="<%= mongoose.id %>" readonly>
			       </td>
			      <td>
			      	<input type="text" name="name" class="form-control" value="<%= mongoose.name %>">
			      </td>
			      <td>
			      	<input type="text" name="description" class="form-control" value="<%= mongoose.description %>">
			      </td>
			      <td>
			      	<input type="text" name="createdAt" class="form-control" value="<%= moment(mongoose.createdAt).format('Do MMMM, YYYY'); %>">
			      </td>
			      <td>
			      	<button type="submit" class="btn btn-success" > Update </button>
			      </td>
			    </form>
		    </tr>
		  </tbody>
		</table>
	</div>
</body>
</html>
